      <br>
    </div>

    <div class="form-field">
      <%= f.label :end_date, 'End Date' %><br>
      <%= f.text_field :end_date %><br>
      <br>
    </div>

    <div class="form-field">
      <%= f.label :location, 'Location' %><br>
      <%= f.text_field :location %><br>
      <br>
